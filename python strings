def strlen(str):
counter = 0
while str[counter:]:
counter += 1
return counter

def strrev(str):
rstr=&amp;quot;&amp;quot;
l=strlen(str)
while l&amp;gt;0:
rstr = rstr + str[l-1]
l=l-1
return rstr

def strcat(st1,st2):
return(st1+st2)

def strcmp(st1,st2):
if(st1==st2):
print(st1 + &amp;quot; and &amp;quot; + st2 + &amp;quot; are same&amp;quot;)
elif (st1&amp;gt;st2):
print(st1 + &amp;quot; comes after &amp;quot; + st2 +&amp;quot; in the Dictionary&amp;quot;)

else:
print(st1 + &amp;quot; comes before &amp;quot; + st2 +&amp;quot; in the Dictionary&amp;quot;)
print(&amp;quot;String Functions:\n 1. String Length \n 2. String Reverse \n 3. String
Concatenation\n
4. String Comparison\n 5. Exit\n&amp;quot;)
while(1):
n=int(input(&amp;quot;Enter your Choice: &amp;quot;))
